// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "preview_tabs": {
    "enabled": false
  },
  "auto_update": false,
  "gutter": {
    "line_numbers": true
  },
  "minimap": {
    "show": "auto"
  },
  "cursor_blink": true,
  "linked_edits": true,
  "icon_theme": "Colored Zed Icons Theme Dark",
  "theme": {
    "light": "Tokyo Night Light",
    "dark": "Tokyo Night",
    "mode": "dark"
  },
  "base_keymap": "VSCode",
  "vim_mode": true,
  "ui_font_size": 14,
  "ui_font_family": "Cascadia Code",
  "buffer_font_size": 14,
  "buffer_font_family": "Google Sans Code",
  "buffer_font_weight": 500,
  "relative_line_numbers": true,
  "tab_bar": {
    "show_nav_history_buttons": false
  },
  "tabs": {
    "file_icons": true,
    "git_status": true
  },
  "inlay_hints": {
    "enabled": true
  },
  "hide_mouse": "on_typing",
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  "soft_wrap": "editor_width",
  "tab_size": 2,
  "format_on_save": "on",
  "experimental.theme_overrides": {
    "syntax": {
      "comment": {
        "font_style": "italic",
        "font_weight": 400
      }
    }
  },
  "vertical_scroll_margin": 6,
  "restore_on_startup": "none",
  "extend_comment_on_newline": false,
  "file_types": {
    "jsonc": ["*.cjson"],
    "xml": ["*.urdf"],
    "dotenv": [".env*"],
    "css": ["*.wxss"],
    "toml": ["*.service"],
    "tailwindcss": ["*.postcss"],
    "postcss": ["*.css"],
    "html": ["*.svg"],
    "yaml": ["*.clangd"],
    "javascript": ["*.wxs"],
    "cpp": [
      "functional",
      "array",
      "string",
      "string_view",
      "cctype",
      "clocale",
      "cmath",
      "cstdarg",
      "cstddef",
      "cstdio",
      "cstdlib",
      "cstring",
      "ctime",
      "cwchar",
      "cwctype",
      "any",
      "atomic",
      "bit",
      "bitset",
      "chrono",
      "compare",
      "complex",
      "concepts",
      "condition_variable",
      "cstdint",
      "deque",
      "forward_list",
      "list",
      "map",
      "set",
      "unordered_map",
      "unordered_set",
      "vector",
      "exception",
      "algorithm",
      "iterator",
      "memory",
      "memory_resource",
      "numeric",
      "optional",
      "random",
      "ratio",
      "system_error",
      "tuple",
      "type_traits",
      "utility",
      "fstream",
      "initializer_list",
      "iomanip",
      "iosfwd",
      "iostream",
      "istream",
      "limits",
      "mutex",
      "new",
      "numbers",
      "ostream",
      "semaphore",
      "sstream",
      "stdexcept",
      "stop_token",
      "streambuf",
      "thread",
      "cinttypes",
      "typeindex",
      "typeinfo",
      "variant",
      "shared_mutex"
    ],
    "C++": ["c", "h", "cpp", "hpp"],
    "*.mdx": ["markdown"]
  },
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    "**/vendor",
    "**/.tmp*",
    "**/.vscode"
  ],
  "terminal": {
    "blinking": "on",
    "font_family": "FiraCode Nerd Font",
    "font_size": 12,
    "toolbar": {
      "breadcrumbs": true
    },
    "shell": "system",
    "copy_on_select": true,
    "dock": "bottom"
  },
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": false
    }
  },
  "languages": {
    "C++": {
      "formatter": {
        "external": {
          "command": "clang-format",
          "arguments": ["-style=file"]
        }
      }
    },
    "Go": {
      "code_actions_on_format": {
        "source.organizeImports": true
      }
    },
    "Rust": {
      "tab_size": 4
    },
    "Python": {
      "language_servers": ["basedpyright", "!pyright", "ruff"],
      "tab_size": 4,
      "format_on_save": "off",
      "formatter": [
        {
          "external": {
            "command": "ruff",
            "arguments": ["format", "-"]
          }
        },
        {
          "code_actions": {
            // Fix all auto-fixable lint violations
            "source.fixAll.ruff": true,
            // Organize imports
            "source.organizeImports.ruff": true
          }
        }
      ]
    },
    "TSX": {
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      },
      "code_actions_on_format": {
        "source.organizeImports": true,
        "source.fixAll.eslint": true
      }
    },
    "JavaScript": {
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      },
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    },
    "TypeScript": {
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      },
      "code_actions_on_format": {
        "source.organizeImports": true,
        "source.fixAll.eslint": true
      }
    }
  },

  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "checkOnSave": {
          // rust-analyzer.check.command (default: "check")
          // "command": "clippy"
        }
      }
    },
    "ty": {
      "settings": {
        "inlayHints": {
          "callArgumentNames": false
        },
        "diagnosticMode": "workspace",
        "initialization_options": {
          "logLevel": "debug"
        }
      }
    },
    // "basedpyright": {
    //   "settings": {
    //     "python": {
    //       "pythonPath": ".venv/bin/python",
    //       "extraPaths": [".venv/lib"]
    //     },

    //     "basedpyright.analysis": {
    //       "diagnosticMode": "openFilesOnly",
    //       "inlayHints": {
    //         "callArgumentNames": true
    //       },
    //       "typeCheckingMode": "basic",
    //       "diagnosticSeverityOverrides": {
    //         "reportUnusedCallResult": "none",
    //         "reportMissingTypeStubs": false
    //       }
    //     },
    //     "disableOrganizeImports": true
    //   }
    // },
    "eslint": {
      "settings": {
        "codeActionOnSave": {
          "rules": ["import/order"]
        }
      }
    }
  },

  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },

  "features": {
    "edit_prediction_provider": "zed"
  }
}
