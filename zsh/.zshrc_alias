
# file

if command -v duf &> /dev/null; then
  alias df="duf"
fi

if command -v lsd &> /dev/null; then
  alias ls="lsd"
  alias ll="lsd -l -h -a"
else
  alias ls="ls --color=auto"
  alias ll="ls -alF --color=auto"
fi

if command -v nvim &> /dev/null; then
  alias vim="nvim"
fi

if command -v rg &> /dev/null; then
  alias grep="rg"
fi

if command -v bat &> /dev/null; then
  alias cat="bat"
fi

if command -v dust &> /dev/null; then
  alias du="dust"
fi

if command -v trash &> /dev/null; then
  alias rm_real="rm"
  alias rm='trash'
fi



# git
alias git-log="git log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit "
alias git-commit="git commit -m"
alias git-add="git add -A"


# kitty
alias icat="kitten icat"
alias kssh="kitten ssh"
alias kdiff="kitten diff"

# tmux 
alias ta="tmux attach"
alias tks="tmux kill-session"
alias tkl="tmux list-session"


# default app
export EDITOR=nvim visudo
export VISUAL=nvim visudo
export SUDO_EDITOR=nvim
export FCEDIT=nvim
export TERMINAL=kitty
